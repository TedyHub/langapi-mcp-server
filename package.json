{
  "name": "@langapi/mcp-server",
  "version": "1.0.7",
  "description": "MCP server for LangAPI - AI-powered translation management for i18n projects",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "langapi-mcp": "./bin/langapi-mcp.js",
    "@langapi/mcp-server": "./bin/langapi-mcp.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
